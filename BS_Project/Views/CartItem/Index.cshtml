@model List<BS_Project.Models.CartItem>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section jsFooter{

    <script src="/Scripts/controller/cartController.js"></script>
}
<div class="new_arrivals_agile_w3ls_info">
    <div class="container">
        <h3 class="wthree_text_info">
            <span>YOUR CART</span>
        </h3>


        <div class="resp-tabs-container">
            @if (Model.Count > 0)
            {
                <table class="table">
                    <thead>
                        <tr style="background-color:#808080">
                            <td>Picture</td>
                            <td>Name</td>
                            <td>Price</td>
                            <td>Quantity</td>
                            <td>Total</td>
                            <td></td>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr style="background-color:#e6d4d4">

                                <td><img src="@item.Books.ImageBool.Images.FirstOrDefault().ImageURL" style="height:100px; width:70px"></td>
                                <td>@item.Books.Name</td>
                                <td>@item.Books.Price.GetValueOrDefault(0).ToString("N0")</td>
                                <td>
                                    <input min="1" max="3" type="number" value="@item.Quantity" class="txtQuantity" data-id="@item.Books.BookID" />
                                </td>
                                <td>@((item.Books.Price.GetValueOrDefault(0) * item.Quantity).ToString("N0"))</td>
                                <td><a href="#" data-id="@item.Books.BookID" class="btn-delete"><span class="glyphicon glyphicon-remove"></span></a></td>
                            </tr>
                        }
                    </tbody>
                </table>
                <button class="btn btn-danger" id="btnContinue">Continue to Buy</button>
                <button class="btn btn-danger" id="btnUpdate">Update Order Cart</button>
                <button class="btn btn-danger" id="btnSubmit">Click To Payment</button>
                <button class="btn btn-danger" id="btnDeleteAll">Delete All Order Cart</button>
            }
            else
            {
                <span class="alert alert-danger">Không có sách nào trong giỏ hàng</span>
                <br /><br />
                <a href="/ProfileUser/ProfileUser?userID=@Session["userID"]" title="">My Cart</a>
            }

        </div>


    </div>

</div>



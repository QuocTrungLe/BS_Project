@using BS_Project.EF;
@using BS_Project.Models;
@model PaggingModel

<!-- mens -->
<div class="col-md-4 products-left">
    <div class="css-treeview">
        <h4>Categories</h4>
        <ul class="tree-list-pad">
            @foreach (var item in Model.Categories)
            {
                if (int.Parse(@Html.Action("GetCountForCategory", new { idCate = item.CategoryID }).ToString()) > 0)
                {
                    <li>
                        <a class="showBookFollowCategory" id="@item.CategoryID"><label for="item-0"><i class="fa fa-long-arrow-right" aria-hidden="true"></i> @item.Name (@Html.Action("GetCountForCategory", new { idCate = item.CategoryID }))</label></a>
                    </li>
                }
            }
        </ul>
    </div>
    <div class="clearfix"></div>
</div>
